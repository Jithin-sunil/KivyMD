<HomePage>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(30)
        md_bg_color: app.theme_cls.bg_normal

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(56)
            padding: dp(10)
            
            MDIcon:
                icon: "home"
                size_hint: None, None
                size: dp(48), dp(48)
                pos_hint: {"center_y": 0.5}
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
            
            MDLabel:
                text: "Home Page"
                font_style: "H5"
                halign: "left"
                valign: "middle"
                theme_text_color: "Primary"

            MDIcon:
                icon: "login"
                size_hint: None, None
                size: dp(48), dp(48)
                pos_hint: {"center_y": 0.5, "right": 1}  
                theme_text_color: "Custom"
                text_color: app.theme_cls.primary_color
            
            # MDLabel:
            #     text: "Login"
            #     font_style: "H5"
            #     halign: "right"
            #     valign: "middle"
            #     theme_text_color: "Primary"
        
        Widget:  # Spacer

        MDCard:
            orientation: 'vertical'
            size_hint: None, None
            size: dp(360), dp(240)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 2
            md_bg_color: app.theme_cls.bg_light
            padding: dp(20)
            spacing: dp(10)
            
            MDLabel:
                text: "Welcome to the Home Page"
                halign: "center"
                theme_text_color: "Primary"
                font_style: "H5"

            MDSeparator:
                height: dp(1)

            MDBoxLayout:
                orientation: 'horizontal'
                spacing: dp(10)
                MDRaisedButton:
                    text: "Go to District Form"
                    size_hint: 0.5, None
                    height: dp(40)
                    on_press: app.sm.current = 'district_form'
                    md_bg_color: app.theme_cls.primary_color

                MDRaisedButton:
                    text: "Go to Category Form"
                    size_hint: 0.5, None
                    height: dp(40)
                    on_press: app.sm.current = 'category_form'
                    md_bg_color: app.theme_cls.primary_color
        
        Widget:  # Spacer
